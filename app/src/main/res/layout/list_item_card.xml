<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_card_image"
        android:layout_width="@dimen/list_item_card_image_width"
        android:layout_height="@dimen/list_item_card_image_height"
        android:scaleType="fitCenter"
        tools:src="@drawable/cruel_ultimatum"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/list_item_card_padding">

        <TextView
            style="@style/Text.Header"
            android:id="@+id/list_item_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cruel Ultimatum"/>

        <TextView
            style="@style/Text.Medium"
            android:id="@+id/list_item_card_manacost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="UUBBBRR"/>

        <TextView
            android:id="@+id/list_item_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Target opponent sacrifices a creature, discards three cards, then loses 5 life. You return a creature card from your graveyard to your hand, draw three cards, then gain 5 life."/>
    </LinearLayout>
</LinearLayout>